{
    "name": "Clarion",
    "description": "Clarion Language Support",
    "version": "1.0.18",
    "publisher": "Fushnisoft",
    "repository": {
        "type": "git",
        "url": "https://github.com/fushnisoft/SublimeClarion"
    },
    "icon": "images/sv57x57.png",
    "galleryBanner": {
        "color": "#474747",
        "theme": "dark"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "bugs": {
        "url": "https://github.com/fushnisoft/SublimeClarion/issues"
    },
    "engines": {
        "vscode": "^0.10.1"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:clarion"
    ],
    "contributes": {
        "languages": [
            {
                "id": "clarion",
                "aliases": [
                    "Clarion",
                    "clarion"
                ],
                "extensions": [
                    ".clw",
                    ".equ",
                    ".inc",
                    ".int",
                    ".txa",
                    ".txd",
                    ".tpl",
                    ".tpw"
                ],
                "configuration": "./clarion.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "clarion",
                "scopeName": "source.clarion",
                "path": "./syntaxes/Clarion.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "clarion",
                "path": "./snippets/clarion.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "devDependencies": {
        "@types/vscode": "^1.41.0",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}
